<?php
  $host = "localhost";
  $user = "";
  $password = "";
  $db = "users_db";

  $con = mysqli_connect($host, $user, $password, $db);

  // SignIn function
  if(isset($_POST['log-submit'])){
    $uname = $_POST['uname'];
    $password = $_POST['psw'];
    $sql = "select * from signin where username = '".$uname."'AND password = '".$password."'";
    $result = mysqli_query($con, $sql);

    if(mysqli_num_rows($result) == 1){
      echo "You have successfully logged in";
      exit();
    }
    else{
      echo "You have entered Incorrect Password";
      exit();
    }
  }
  
  // SignUp function
  if (isset($_POST['re-submit'])){
      $username = mysqli_real_escape_string($con, $_POST['user_login']);
      $password = mysqli_real_escape_string($con, $_POST['user_pass']);
      $password2 = mysqli_real_escape_string($con, $_POST['user_pass2']);
      
      if($password == $password2){
         $sql = "INSERT INTO signin(username, password) VALUES('$username', '$password')";
         mysqli_query($con, $sql);
         echo "You have successfully register";
         exit();
      }
      else{
          echo "The two passwords do not match";
          exit();
      }
  }
  
?>

